{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "title",
        "isbn"
    ],
    "properties": {
        "title": {
            "type": "string",
            "default": "",
            "maxLength" : 500,
            "title": "The title Schema",
            "examples": [
                "Flowers for Algernon"
            ]
        },
        "description": {
            "type": "string",
            "default": "",
            "maxLength" : 500,
            "title": "The description Schema",
            "examples": [
                "Oscar-winning film Charly starring Cliff Robertson and Claire Bloom-a mentally challenged man receives an operation that turns him into a genius...and introduces him to heartache."
            ]
        },
        "publisher": {
            "type": "string",
            "default": "",
            "maxLength" : 50,
            "title": "The publisher Schema",
            "examples": [
                "Houghton Mifflin Harcourt"
            ]
        },
        "isbn": {
            "type": "string",
            "default": "",
            "minLength" : 10,
            "maxLength" : 13,
            "title": "The isbn Schema",
            "pattern" : "^[0-9]+$",
            "examples": [
                "9780156030304"
            ]
        },
        "avgRating": {
            "type": "integer",
            "default": 0,
            "title": "The avgRating Schema",
            "examples": [
                4
            ]
        },
        "printType": {
            "type": "string",
            "default": "",
            "maxLength" : 20,
            "title": "The printType Schema",
            "examples": [
                "BOOK"
            ]
        },
        "thumbnail": {
            "type": "string",
            "default": "",
            "title": "The thumbnail Schema",
            "examples": [
                "http://books.google.com/books/content?id=NRWlitmahXkC\u0026printsec=frontcover\u0026img=1\u0026zoom=5\u0026edge=curl\u0026source=gbs_api"
            ]
        }
    },
    "examples": [{
        "title": "Flowers for Algernon",
        "description": "Oscar-winning film Charly starring Cliff Robertson and Claire Bloom-a mentally challenged man receives an operation that turns him into a genius...and introduces him to heartache.",
        "publisher": "Houghton Mifflin Harcourt",
        "isbn": "9780156030304",
        "avgRating": 4,
        "printType": "BOOK",
        "thumbnail": "http://books.google.com/books/content?id=NRWlitmahXkC\u0026printsec=frontcover\u0026img=1\u0026zoom=5\u0026edge=curl\u0026source=gbs_api"
    }]
}