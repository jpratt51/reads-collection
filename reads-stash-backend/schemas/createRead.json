{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "title",
        "isbn"
    ],
    "properties": {
        "title": {
            "type": "string",
            "default": "",
            "title": "The title Schema",
            "examples": [
                "Unsouled"
            ]
        },
        "description": {
            "type": "string",
            "default": "",
            "title": "The description Schema",
            "examples": [
                "Sacred artists follow a thousand Paths to power, using their souls to control the forces of the natural world. Lindon is Unsouled, forbidden to learn the sacred arts of his clan. When faced with a looming fate he cannot ignore, he must rise beyond anything he's ever known...and forge his own Path."
            ]
        },
        "isbn": {
            "type": "string",
            "default": "",
            "title": "The isbn Schema",
            "pattern" : "^[0-9]+$",
            "examples": [
                "9780989671767"
            ]
        },
        "avgRating": {
            "type": "number",
            "default": 0.0,
            "title": "The avgRating Schema",
            "examples": [
                4.5
            ]
        },
        "printType": {
            "type": "string",
            "default": "",
            "title": "The printType Schema",
            "examples": [
                "BOOK"
            ]
        },
        "publishedDate": {
            "type": "string",
            "default": "",
            "title": "The publishedDate Schema",
            "examples": [
                "2017-05-20"
            ]
        },
        "thumbnail": {
            "type": "string",
            "default": "",
            "title": "The thumbnail Schema",
            "examples": [
                "http://books.google.com/books/content?id=OjYJtAEACAAJ\u0026printsec=frontcover\u0026img=1\u0026zoom=1\u0026source=gbs_api"
            ]
        },
        "infoLink": {
            "type": "string",
            "default": "",
            "title": "The infoLink Schema",
            "examples": [
                "http://books.google.com/books?id=g32LzwEACAAJ\u0026dq=unsouled+inauthor:wight\u0026hl=\u0026source=gbs_api"
            ]
        },
        "pageCount": {
            "type": "integer",
            "default": 0,
            "title": "The pageCount Schema",
            "examples": [
                384
            ]
        },
        "authors": {
            "type": "array",
            "default": [],
            "title": "The authors Schema",
            "items": {
                "type": "string",
                "default": "",
                "title": "A Schema",
                "examples": [
                    "Will Wight"
                ]
            },
            "examples": [
                [
                    "Will Wight"]
            ]
        }
    },
    "examples": [{
        "title": "Unsouled",
        "description": "Sacred artists follow a thousand Paths to power, using their souls to control the forces of the natural world. Lindon is Unsouled, forbidden to learn the sacred arts of his clan. When faced with a looming fate he cannot ignore, he must rise beyond anything he's ever known...and forge his own Path.",
        "isbn": "9780989671767",
        "avgRating": 4.5,
        "printType": "BOOK",
        "publishedDate": "2017-05-20",
        "thumbnail": "http://books.google.com/books/content?id=OjYJtAEACAAJ\u0026printsec=frontcover\u0026img=1\u0026zoom=1\u0026source=gbs_api",
        "infoLink": "http://books.google.com/books?id=g32LzwEACAAJ\u0026dq=unsouled+inauthor:wight\u0026hl=\u0026source=gbs_api",
        "pageCount": 384,
        "authors": [
            "Will Wight"
        ]
    }]
}