{
    "$schema": "https://json-schema.org/draft/2019-09/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "default": {},
    "title": "Root Schema",
    "required": [
        "title",
        "text",
        "username"
    ],
    "properties": {
        "title": {
            "type": "string",
            "default": "",
            "maxLength": 50,
            "title": "The title Schema",
            "examples": [
                "sample journal title"
            ]
        },
        "text": {
            "type": "string",
            "default": "",
            "maxLength": 7500,
            "title": "The text Schema",
            "examples": [
                "sample journal entry"
            ]
        },
        "username": {
            "type": "string",
            "maxLength" : 30,
            "minLength" : 5,
            "default": "",
            "title": "The username Schema",
            "examples": [
                "testUsername"
            ]
        }
    },
    "examples": [{
        "title": "sample journal title",
        "text": "sample journal entry",
        "username": "testUsername"
    }]
}